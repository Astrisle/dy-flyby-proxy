{
  "name": "dy-flyby-proxy",
  "version": "2.3.17",
  "author": "星落",
  "license": "MIT",
  "description": "https://www.douyu.com/520",
  "main": "main.js",
  "scripts": {
    "start": "vite build && electron .",
    "build": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder",
    "serve": "cd dist && pnpm dlx http-server --log-ip"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^1.1.4",
    "electron-log": "^4.4.4",
    "electron-settings": "^4.0.2",
    "electron-updater": "^5.0.1",
    "element-plus": "^2.1.10",
    "vue": "^3.2.33"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.1",
    "autoprefixer": "^10.4.5",
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3",
    "postcss": "^8.4.12",
    "prettier": "2.6.2",
    "sass": "^1.50.1",
    "tailwindcss": "^3.0.24",
    "unplugin-auto-import": "^0.7.1",
    "unplugin-vue-components": "^0.19.3",
    "vite": "^2.9.5"
  },
  "build": {
    "appId": "com.skysway.dyassistant",
    "productName": "520弹幕助手",
    "files": [
      "**/{main.js,preload.js}",
      "entry/",
      "!public/",
      "!src/"
    ],
    "win": {
      "icon": "public/icon.ico",
      "publish": [
        {
          "provider": "generic",
          "url": "http://localhost:8080/",
          "useMultipleRangeRequest": false
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "520弹幕助手 Setup ${version}.${ext}",
      "perMachine": false
    }
  }
}
